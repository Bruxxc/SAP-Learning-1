<mvc:View
    controllerName="sap.training.exc.controller.Test"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page title="Test Page">
        <content>
            <!-- Tabla de listado de usuarios -->

            <!-- AJUSTAR PATH DE LOS ITEMS -->
            <Table
                headerText="Customers"
                selectionChange=".onCustomerChange"
                class="sapUiResponsiveMargin"
                width="auto"
                id="UsersRoleTable"
                items="{
                path: '/UX_Customer'
              }"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title text="Usuarios" />
                        <ToolbarSpacer/>

                        <!-- Buscador -->
                        <SearchField
                            width="40%"
                            search=".onFilterUsers"
                        />

                        <!-- BotÃ³n de crear usuario -->
                        <Button
                            text="Crear Usuario"
                            press=".onDisplayCUPanel"
                            icon="sap-icon://add"
                        />
                    </Toolbar>
                </headerToolbar>

                <!-- Cambiar campos de los usuarios -->

                <!-- Headers -->
                <columns>
                    <Column>
                        <header>
                            <Text text="Name" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="Street" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="PostCode" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="City" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Tablet">
                        <header>
                            <Text text="Country" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="Email" />
                        </header>
                    </Column>
                </columns>
                
                <!-- Datos de usuarios -->
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onNavToDetails"
                    >
                        <cells>
                            <ObjectIdentifier title="{CustomerName}" />
                            <Text text="{Street}" />
                            <Text text="{PostCode}" />
                            <Text text="{City}" />
                            <Text text="{Country}" />
                            <Text text="{Email}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
